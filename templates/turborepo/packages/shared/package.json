{
  "name": "@workspace/shared",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types/index.ts",
    "./utils": "./src/utils/index.ts"
  },
  "scripts": {
    "format": "dprint fmt",
    "lint": "oxlint --fix --type-aware",
    "test": "vitest --run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "build": "tsc",
    "verify": "bun run format && bun run lint && bun run test && bun run build"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "oxlint-tsgolint": "^0.10.1"
  }
}
