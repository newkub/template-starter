{
	"publisher": "vscode-vue",
	"name": "your-extension",
	"displayName": "Your Extension",
	"type": "module",
	"version": "0.0.1",
	"private": true,
	"categories": [
		"Other"
	],
	"main": "./dist/extension.cjs",
	"engines": {
		"vscode": "^1.106.0"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"commands": [
			{
				"command": "your-extension.helloWorld",
				"title": "Hello World"
			}
		],
		"configuration": {
			"title": "Your Extension",
			"properties": {
				"your-extension.message": {
					"type": "string",
					"default": "Hello World",
					"description": "The message to show in the notification"
				}
			}
		}
	},
	"scripts": {
		"build": "tsdown",
		"dev": "bun run --watch ./src/index.ts",
		"lint": "bunx tsc --noEmit",
		"vscode:prepublish": "bun run build"
	},
	"devDependencies": {
		"@types/node": "18.x",
		"@types/vscode": "^1.106.0",
		"reactive-vscode": "^0.2.22",
		"tsdown": "^0.11.13",
		"typescript": "^5.9.3"
	}
}
