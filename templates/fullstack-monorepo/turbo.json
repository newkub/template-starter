{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "prepare": {
      "cache": false
    },
    "format": {
      "dependsOn": ["^prepare"]
    },
    "format:direct": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^format"],
      "cache": false
    },
    "lint:direct": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^lint"],
      "cache": true
    },
    "test:run": {
      "dependsOn": ["^lint"],
      "cache": true
    },
    "test:coverage": {
      "dependsOn": ["^lint"],
      "cache": true
    },
    "test:ui": {
      "dependsOn": ["^lint"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^lint"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "cache": false
    },
    "verify": {
      "dependsOn": ["^test"],
      "cache": false
    },
    "preview": {
      "dependsOn": ["^verify"]
    },
    "clean": {
      "cache": false
    },
    "scan": {
      "cache": false
    },
    "check:modules": {
      "cache": false
    },
    "devtools": {
      "cache": false,
      "persistent": true
    }
  }
}
