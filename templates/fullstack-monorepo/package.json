{
  "name": "turborepo",
  "private": true,
  "packageManager": "bun@1.3.5",
  "globalConcurrency": 32,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "watch": "turbo watch verify --ui=tui",
    "prepare": "bunx lefthook install",
    "preinstall": "bunx taze -r -w --latest",
    "dev": "turbo dev --ui=tui",
    "format": "turbo format",
    "scan": "bunx sg scan -r",
    "check:modules": "bunx node-modules-inspector",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:run": "vitest --run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "build": "turbo build",
    "verify": "turbo verify",
    "devtools": "turbo devtools",
    "clean": "turbo run clean && bunx rimraf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.7.3"
  }
}
