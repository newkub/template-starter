{
  "name": "templates",
  "version": "0.0.0",
  "private": true,
  "packageManager": "bun@1.3.5",
  "type": "module",
  "globalConcurrency": 32,
  "workspaces": [
    "template/*",
    "apps/*"
  ],
  "scripts": {
    "watch": "turbo watch verify --ui=tui",
    "prepare": "bunx lefthook install",
    "dev": "turbo dev --ui=tui",
    "format": "turbo format",
    "scan": "bunx sg scan -r",
    "check:modules": "bunx node-modules-inspector",
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build",
    "verify": "turbo verify",
    "devtools": "turbo devtools"
  },
  "devDependencies": {
    "turbo": "^2.7.3",
    "vite": "^7.3.1"
  }
}
