{
	"name": "{{ packageName }}",
	"version": "0.0.1",
	"private": true,
	"description": "{{ description }}",
	"type": "module",
	"packageManager": "bun@1.3.5",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"postinstall": "",
		"watch": "bun --watch verify",
		"dev": "bun run src/index.ts",
		"format": "dprint fmt",
		"lint": "tsc --noEmit && oxlint --fix",
		"build": "bun build src/index.ts --target=bun --outdir dist",
		"test": "vitest run",
		"verify": "bun run format && bun audit && bun run lint && bun run test && bun run build"
	},
	"devDependencies": {
		"@types/bun": "^1.3.5",
		"@types/node": "^20.19.27",
		"dprint": "^0.50.2",
		"oxlint": "^1.38.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"engines": {
		"bun": ">=1.3.5"
	}
}
