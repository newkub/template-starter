{
  "name": "@templates/cli",
  "version": "0.0.0",
  "description": "CLI tool for managing templates and configurations",
  "type": "module",
  "private": false,
  "author": "Your Name",
  "license": "MIT",
  "keywords": ["cli", "templates"],
  "packageManager": "bun@1.3.2",
  "bin": {
    "templates-cli": "./src/index.ts"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "bun build --target=bun src/index.ts --outfile=dist/index.js",
    "postbuild": "bun link",
    "dev": "bun run --watch src/index.ts",
    "lint": "bunx tsc --noEmit && bunx oxlint --fix",
    "release": "semantic-release",
    "test": "vitest"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.2",
    "@types/bun": "^1.3.4",
    "semantic-release": "^25.0.2",
    "vitest": "^4.0.15",
    "@semantic-release/exec": "^7.1.0"
  }
}